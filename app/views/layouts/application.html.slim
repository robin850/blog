doctype html
html lang="fr"

  head
    title = yield(:title) + " â€” Robin Dupret"
    meta name="copyright" content="http://robin-dupret.com"
    meta name="language" content="fr"
    meta http-equiv="content-language" content="fr"
    meta property="og:site_name" content="Robin Dupret"
    meta property="og:title" content="Robin Dupret - Blog"
    meta property="og:url" content="http://robin-dupret.com/"
    meta property="og:language" content="fr"
    meta charset="utf-8"
    = stylesheet_link_tag "application", :media => "all"
    = auto_discovery_link_tag :atom, "/feed"
    = csrf_meta_tags

  body

    = render :partial => "header"

    div#container.container_12
      = content_tag(:div, notice, :class => :notice) if notice
      = content_tag(:div, alert, :class => :alert) if alert

      = main_grid do
        = yield

      = render :partial => "sidebar" if show_or_index?
      = render :partial => "contact_sidebar" if contact?

    = clearer

    = render :partial => "footer"

    = javascript_include_tag "application"
