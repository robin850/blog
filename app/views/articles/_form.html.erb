<%= simple_form_for @article, :html => {:class => "admin"} do |f| %>
  <%= f.input :title %>
  <%= f.input :slug %>
  <%= f.input :description %>
  <%= f.input :introduction %>
  <%= f.input :body %>
  <%= f.association :categories, :as => :check_boxes %>
  <%= f.input :published, :collection => [:on, :off], :as => :radio_buttons %>
  <%= f.button :submit, :value => "Envoyer" %>
<% end %>