<%= content_tag(:div, :id => :header) do %>
	<%= content_tag(:div, :class => :container_12) do %>

		<%= content_tag(:div, :class => "grid_3 logo alpha") do %>
			<%= link_to image_tag("logo.png"), root_path %>
		<% end %>

		<%= content_tag(:div, :class => :grid_4) do %>
			<ul class="nav">
				<li><%= link_to "Blog", root_path, :class => :active %></li>
				<li><%= link_to "Portfolio", "" %></li>
				<li><%= link_to "Contact", contact_path %></li>
			</ul>
		<% end %>

		<%= content_tag(:div, :class => "grid_3 right_box") do %>
		
			<% if user_signed_in? %>
				<%= render :partial => "userbox" %>
			<% else %>
				<%= render :partial => "social" %>
			<% end %>

		<% end %>
	
	<% end %>
<% end %>